<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>svcdeploy</ToolCommandName>
    <CodeAnalysisRuleSet>..\Service.Deploy.ruleset</CodeAnalysisRuleSet>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Usa.Tool.ServiceDeploy</PackageId>
    <Title>Windows service deploy client tool</Title>
    <Description>Windows service deploy client tool</Description>
    <Summary>Windows service deploy client tool</Summary>
    <PackageTags>deploy;installer;tools;windows-service</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="PInvoke.AdvApi32" Version="0.7.104" />
    <PackageReference Include="System.CommandLine" Version="2.0.0-beta2.21617.1" />
    <PackageReference Include="System.CommandLine.NamingConventionBinder" Version="2.0.0-beta2.21617.1" />
  </ItemGroup>

</Project>
